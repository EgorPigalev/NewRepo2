<Page x:Class="Rebalka.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rebalka"
      mc:Ignorable="d" Style="{StaticResource PageStyle}"
      d:DesignHeight="650" d:DesignWidth="1200"
      Title="Registration">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Регистрация" FontSize="32" HorizontalAlignment="Center"/>
            <TextBlock Text="Фамилия:"/>
            <TextBox Name="TBSurname"/>
            <TextBlock Text="Имя:"/>
            <TextBox Name="TBName"/>
            <TextBlock Text="Отчество:"/>
            <TextBox Name="TBPatronomic"/>
            <TextBlock Text="Логин:"/>
            <TextBox Name="TBLogin"/>
            <TextBlock Text="Пароль:"/>
            <TextBox Name="TBPassword"/>
            <Button Name="BtnRegistration" Style="{StaticResource ButtonStyle}" Click="BtnRegistration_Click" Content="Зарегистрироваться"/>
            <Button Name="BtnLogin" Style="{StaticResource ButtonStyle}" Click="BtnLogin_Click" Content="Перейти на авторизацию"/>
        </StackPanel>
    </Grid>
</Page>
